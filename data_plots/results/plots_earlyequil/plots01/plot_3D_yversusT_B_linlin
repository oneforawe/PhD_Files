#filename: plot_3D_yversusT_B_linlin
reset
set terminal png
set output "plot_3D_yversusT_B_linlin.png"
set title "Fugacity (y) vs Temperature (T/Tc) in 3D \n with different length-scale cuts-off"
set ylabel "y"
set xlabel "T/Tc"
set yrange [0:100000]
set pointsize 0.5
set grid
set key left bottom box
plot "ring1_B_Dexp000.dat" using 1:6 with linespoints title " l_max = 0  ", \
     "ring1_B_Dexp001.dat" using 1:6 with linespoints title " l_max = 1  ", \
     "ring1_B_Dexp002.dat" using 1:6 with linespoints title " l_max = 2  ", \
     "ring1_B_Dexp003.dat" using 1:6 with linespoints title " l_max = 3  ", \
     "ring1_B_Dexp100.dat" using 1:6 with linespoints title " l_max = 100"
